{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-multi-vcpkg",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-multi-vcpkg",
            "configurePreset": "ninja-multi-vcpkg"
        }
    ],
    "testPresets": [
        {
            "name": "ninja-multi-vcpkg",
            "configurePreset": "ninja-multi-vcpkg"
        }
    ]
}